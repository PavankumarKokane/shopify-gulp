  <div class="section">
    <div class="container">
      <div class="footer-main-div">
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'footer_menu' %}
                {% if block.settings.select_footer_menu.links.size > 0 %}
                  <div class="menu-point">
                    <p class="menu-title">{{ block.settings.select_footer_menu.title }}</p>
                    <ul>
                      {% for menu in block.settings.select_footer_menu.links %}
                        <li>
                          <a class="menu-links" href="{{ menu.url }}">{{ menu.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              {% endif %}
            {% endfor %}
          {% endif %}

        <div class="contact-us">
            {% for block in section.blocks %}
              {% if block.type == 'contact_us' %}
                  <div class="menu-point">
                    <p class="menu-title">{{ block.settings.contact_us.title }}</p>
                    <div class="contact-point">
                      <img loading="lazy" src="{{ block.settings.contact_address_icon | img_url }}" height="78" width="224" alt="Footer Image">
                      <p class="menu-content">{{ block.settings.contact_address }}</p>
                    </div>
                    <div class="contact-point">
                      <img loading="lazy" src="{{ block.settings.phone_icon | img_url }}" height="78" width="224" alt="Footer Image">
                      <p class="menu-content">{{ block.settings.phone_number }}</p>
                    </div>
                    <div class="contact-point">
                      <img loading="lazy" src="{{ block.settings.email_icon | img_url }}" height="78" width="224" alt="Footer Image">
                      <p class="menu-content">{{ block.settings.email_id }}</p>
                    </div>
                  </div>
              {% endif %}
            {% endfor %}
        </div>
      </div>
      <div class="social-newsletter">
        <div class="social-links-div">
          <div>
            {% if section.settings.copyright_text != blank %}
              <p class="copyright-text">{{ section.settings.copyright_text }}<p>
            {% endif %}
            <p>{{ section.settings.privacy_policy_title }}</p>
          </div>
          <ul>
            {% for block in section.blocks %}
              {% if block.type == 'social_links' %}
                <li>
                  <a href="{{ block.settings.profile_link }}" target="_blank">
                    <img loding="lazy" src="{{ block.settings.logo | img_url: 'master' }}" height="40" width="40" >
                  </a>
              </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
      </div>
    </div>
  </div>

